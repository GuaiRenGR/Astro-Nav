<script>
  // ä¸»é¢˜åˆ‡æ¢
  const themeToggle = document.getElementById('theme-toggle');
  const html = document.documentElement;

  // åˆå§‹åŒ–ä¸»é¢˜
  const savedTheme = localStorage.getItem('theme') || 'light';
  html.classList.toggle('dark', savedTheme === 'dark');

  themeToggle?.addEventListener('click', () => {
    const isDark = html.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // æ’åºåŠŸèƒ½
  const sortSelect = document.getElementById('sort-select') as HTMLSelectElement;
  const sitesGrid = document.getElementById('sites-grid');

  sortSelect?.addEventListener('change', (e) => {
    const sortBy = (e.target as HTMLSelectElement).value;
    if (!sitesGrid) return;

    const cards = Array.from(sitesGrid.querySelectorAll('.site-card')) as HTMLElement[];

    // æ’åº
    cards.sort((a, b) => {
      if (sortBy === 'alphabet') {
        const aKey = a.dataset.sitePinyin || a.dataset.siteName?.toLowerCase() || '';
        const bKey = b.dataset.sitePinyin || b.dataset.siteName?.toLowerCase() || '';
        return aKey.localeCompare(bKey);
      } else if (sortBy === 'date') {
        const aIndex = parseInt(a.dataset.index || '0');
        const bIndex = parseInt(b.dataset.index || '0');
        return bIndex - aIndex; // å€’åºï¼Œæœ€æ–°çš„åœ¨å‰
      } else {
        // é»˜è®¤æ’åº
        const aIndex = parseInt(a.dataset.index || '0');
        const bIndex = parseInt(b.dataset.index || '0');
        return aIndex - bIndex;
      }
    });

    // é‡æ–°æ’åˆ—
    cards.forEach((card, index) => {
      card.style.animationDelay = `${index * 50}ms`;
      card.style.animation = 'none';
      setTimeout(() => {
        card.style.animation = '';
      }, 10);
      sitesGrid.appendChild(card);
    });
  });
</script>
